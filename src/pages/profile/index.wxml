<view class="profile bg-blue" wx:if="{{name}}">
  <view class="cu-avatar radius xl" style="background-image:url({{avatar}})"></view>
  <view class="info">{{name}}</view>
</view>
<view class="profile bg-blue" wx:else>
  <view class="cu-avatar radius xl"><text class="cuIcon-people"></text></view>
  <button open-type="getUserInfo" bindgetuserinfo="getUserInfo"></button>
  <text class="info">您还未登录, 请点此登录</text>
</view>

<view class="cu-list menu sm-border">
  <view class="cu-item">
    <view class="content">
      <text class="text-grey">信息发布</text>
    </view>
  </view>
  <view class="cu-item">
    <view class="content">
      <text class="text-grey">客服咨询</text>
    </view>
  </view>
  <view class="cu-item">
    <view class="content">
      <text class="text-grey">关于异居</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-grey">异居服务</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-grey">个人设置</text>
    </view>
  </view>
</view>
